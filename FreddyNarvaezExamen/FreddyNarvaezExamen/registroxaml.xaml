<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FreddyNarvaezExamen.registroxaml">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUser" HorizontalTextAlignment="End" ></Label>
            <Label Text="Registro Estudiante" HorizontalTextAlignment="Center" TextColor="Black"
            FontSize="25" ></Label>

            <Entry x:Name="txtnombre" Keyboard="Text" Placeholder="Ingrese su Nombre:"></Entry>

            <Entry x:Name="txtmonto" Keyboard="Numeric" Placeholder="Ingrese monto Inicial:"></Entry>

            <Label Text="Pago Mensual" HorizontalTextAlignment="Center" TextColor="Black"
         FontSize="18"></Label>

            <Entry x:Name="txtpagom" IsReadOnly="True"></Entry>

            <Button x:Name="btnguardar" Text="Guardar" Clicked="btnguardar_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>